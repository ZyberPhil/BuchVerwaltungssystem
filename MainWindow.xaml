        <TextBlock HorizontalAlignment="Left" Height="23" Margin="317,0,0,0" TextWrapping="Wrap" Text="Erscheinungsjahr" VerticalAlignment="Top" Width="120" Grid.Column="1"/>

    </Grid>
</Window>
